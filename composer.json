{
    "name": "lullabot/ab_tests",
    "description": "A/B Tests Drupal module",
    "type": "drupal-module",
    "license": "proprietary",
    "authors": [
        {
            "name": "Mateu Aguilo Bosch",
            "email": "mateu@mateuaguilo.com"
        }
    ],
    "require": {
        "justinrainbow/json-schema": "^6.4"
    },
    "require-dev": {
        "drupal/coder": "^8"
    },
    "scripts": {
        "lint:check": "php ./vendor/bin/phpcs --ignore=vendor/*,node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module/php,install/php,inc/php,yml .",
        "lint:fix": "php ./vendor/bin/phpcbf --ignore=vendor/*,node_modules/* --standard=Drupal,DrupalPractice --extensions=php,module/php,install/php,inc/php,yml ."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
