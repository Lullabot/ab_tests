<?xml version="1.0"?>
<ruleset name="Drupal AB Tests">
	<config name="php_version" value="70400"/>
	<arg name="colors"/>
	<arg name="extensions" value="php,module,inc,install,test,profile,theme,css,info,txt,md,yml"/>
	<arg name="encoding" value="utf-8"/>
	<arg name="ignore" value="tests/*/data" />
	<file>src</file>
	<file>tests/src</file>

	<!-- Include Drupal and DrupalPractice coding standards -->
	<rule ref="Drupal"/>
	<rule ref="DrupalPractice"/>

	<!-- Exclude problem rules that might not be available in all environments -->
	<rule ref="SlevomatCodingStandard.ControlStructures.RequireNullCoalesceOperator">
		<severity>0</severity>
	</rule>

	<!-- Exclude specific rules if necessary -->
	<rule ref="Drupal.Commenting.FunctionComment.ParamTypeSpaces">
		<severity>0</severity>
	</rule>
	<rule ref="Drupal.Files.LineLength.TooLong">
		<severity>0</severity>
	</rule>
</ruleset>
